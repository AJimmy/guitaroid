<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/song_play_mother_frame"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg">
  	<LinearLayout 
	  	android:id="@+id/song_play_mother_string_linear"
	  	android:orientation="horizontal"
	  	android:layout_width="match_parent"
	  	android:layout_height="match_parent">
  		<View
	    	android:layout_width="5dp"
	    	android:layout_height="match_parent"
	    	android:background="#00000000"
	    />
	    <LinearLayout
	    	android:orientation="vertical"
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1">
	        <ImageView 
	            android:id="@+id/song_play_6th_string_img"
		    	android:cropToPadding="true"
		    	android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_gravity="center"
	    	/>
	    </LinearLayout>
	    <LinearLayout
	    	android:orientation="vertical"
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1">
	        <ImageView 
	       		android:id="@+id/song_play_5th_string_img"
		    	android:cropToPadding="true"
		    	android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_gravity="center"
	    	/>
	    </LinearLayout>
	    <LinearLayout
	    	android:orientation="vertical"
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1">
	        <ImageView 
	       		android:id="@+id/song_play_4th_string_img"
		    	android:cropToPadding="true"
		    	android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_gravity="center"
	    	/>
	    </LinearLayout>
	    <LinearLayout
	    	android:orientation="vertical"
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1">
	        <ImageView
	        	android:id="@+id/song_play_3rd_string_img" 
		    	android:cropToPadding="true"
		    	android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_gravity="center"
	    	/>
	    </LinearLayout>
	    <LinearLayout
	    	android:orientation="vertical"
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1">
	        <ImageView 
	        	android:id="@+id/song_play_2nd_string_img"
		    	android:cropToPadding="true"
		    	android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_gravity="center"
	    	/>
	    </LinearLayout>
	    <LinearLayout
	    	android:orientation="vertical"
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1">
	        <ImageView 
	        	android:id="@+id/song_play_1st_string_img"
		    	android:cropToPadding="true"
		    	android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_gravity="center"
	    	/>
	    </LinearLayout>
	    <View
	    	android:layout_width="5dp"
	    	android:layout_height="match_parent"
	    	android:background="#00000000"
	    />
    	</LinearLayout>
  
  		<FrameLayout 
  			android:id="@+id/song_play_mother_buttion_frame"
  			android:layout_width="match_parent"
  			android:layout_height="match_parent"
  			android:background="#11999999"
  			android:visibility="visible">
	  		<LinearLayout
	  			android:orientation="vertical"
	  			android:layout_width="match_parent"
	  			android:layout_height="match_parent">
	  			<TextView 
	  				android:id="@+id/song_play_artist_title_text"
	  				android:layout_width="match_parent"
	  				android:layout_height="50dp"
	  				android:text="Title"
	  				android:textColor="#FFDDDDDD"
	    			android:textSize="20sp"
	    			android:textStyle="bold"
	    			android:background="#55BBBBBB"
	  				android:gravity="center|center_vertical"/>
		  		<FrameLayout 
				  	android:layout_width="match_parent"
				  	android:layout_height="50dp"
				  	android:visibility="visible">
					<Button 
				  		android:id="@+id/song_play_button_play"
				  		android:text="PLAY"
			    		android:textColor="#FFDDDDDD"
		    			android:textSize="16sp"
		    			android:textStyle="bold"
					 	android:background="@drawable/button"
					 	android:gravity="center|center_vertical"
				  		android:layout_width="match_parent"
				  		android:layout_height="match_parent"
				  		android:visibility="visible"/>
					<TextView 
					    android:id="@+id/song_play_progress_text"
					    android:textColor="#FFDDDDDD"
		    			android:textSize="16sp"
		    			android:textStyle="bold"
		    			android:gravity="center|center_vertical"
				  		android:layout_width="match_parent"
				  		android:layout_height="match_parent"
				  		android:visibility="invisible"
					    />
					<ProgressBar 
					    android:id="@+id/song_play_progressBar"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:visibility="invisible"/>
			  	</FrameLayout>
			  	
