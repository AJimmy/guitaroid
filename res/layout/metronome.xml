<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg">
	    
	<LinearLayout
	  android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:layout_height="0dp"
	  android:padding="10dp"
	  android:layout_weight="1">
	  	<LinearLayout 
		  android:orientation="vertical"
		  android:layout_width="match_parent"
		  android:layout_height="0dp"
		  android:layout_marginLeft="10dp"
	      android:layout_marginRight="10dp"
		  android:paddingBottom="5dp"
		  android:layout_weight="2">
			
		    <LinearLayout 
		    	android:orientation="horizontal"
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent">
		    	<Button
		    		android:id="@+id/metronomeSourcePrevBtn"
		    		android:text="◀"
		    		android:textColor="#FFDDDDDD"
	    			android:textSize="14sp"
	    			android:textStyle="bold"
				 	android:background="@drawable/button"
		    		android:layout_width="60dp"
		    		android:layout_height="match_parent"
		    		android:gravity="center"
		    		/>
		    	<LinearLayout
		    	    android:layout_width="0dp"
		    	    android:layout_height="match_parent"
		    	    android:layout_weight="1"
		    	    android:orientation="vertical"
		    	    android:gravity="center"
		    	    >
		    	    <TextView
				  		android:layout_width="match_parent"
				  		android:layout_height="wrap_content"
				  		android:text="SOUND SOURCE"
			    		android:textColor="#DDBBBBBB"
		    			android:textSize="12sp"
		    			android:textStyle="bold"
		    			android:gravity="center"/>
		    	    <TextView
			    		android:id="@+id/metronomeSourceText"
			    		android:text="Sound Source"
			    		android:textColor="#FFEEEEEE"
		    			android:textSize="18sp"
		    			android:textStyle="bold"
			    		android:layout_width="match_parent"
			    		android:layout_height="wrap_content"
			    		android:gravity="center"
		    		/>
		    	    
		    	</LinearLayout>
		    	
		    	<Button
		    		android:id="@+id/metronomeSourceNextBtn"
		    		android:text="▶"
		    		android:textColor="#FFDDDDDD"
	    			android:textSize="14sp"
	    			android:textStyle="bold"
				 	android:background="@drawable/button"
		    		android:layout_width="60dp"
		    		android:layout_height="match_parent"
		    		android:gravity="center"
		    		/>
		    </LinearLayout>
		</LinearLayout>
		
		<LinearLayout 
		  android:orientation="vertical"
		  android:layout_width="match_parent"
		  android:layout_height="0dp"
		  android:layout_marginLeft="10dp"
	 	  android:layout_marginRight="10dp"
	 	  android:paddingBottom="5dp"
	 	  android:layout_weight="2">
		    <LinearLayout 
		    	android:orientation="horizontal"
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent">
		    	<Button
		    		android:id="@+id/metronomeSignaturePrevBtn"
		    		android:text="◀"
		    		android:textColor="#FFDDDDDD"
	    			android:textSize="14sp"
	    			android:textStyle="bold"
				 	android:background="@drawable/button"
		    		android:layout_width="60dp"
		    		android:layout_height="match_parent"
		    		android:gravity="center"
		    		/>
		    	<LinearLayout
		    	    android:layout_width="0dp"
		    	    android:layout_height="match_parent"
		    	    android:layout_weight="1"
		    	    android:orientation="vertical"
		    	    android:gravity="center"
		    	    >
		    	    <TextView
				  		android:layout_width="match_parent"
				  		android:layout_height="wrap_content"
				  		android:text="TIME SIGNATURE"
			    		android:textColor="#DDBBBBBB"
		    			android:textSize="12sp"
		    			android:textStyle="bold"
		    			android:gravity="center"/>
		    	    <TextView
			    		android:id="@+id/metronomeSignatureText"
			    		android:text="Time Signature"
			    		android:textColor="#FFEEEEEE"
		    			android:textSize="18sp"
		    			android:textStyle="bold"
			    		android:layout_width="match_parent"
			    		android:layout_height="wrap_content"
			    		android:gravity="center"
		    		/>
		    	    
		    	</LinearLayout>
		    	
		    	<Button
		    		android:id="@+id/metronomeSignatureNextBtn"
		    		android:text="▶"
		    		android:textColor="#FFDDDDDD"
	    			android:textSize="14sp"
	    			android:textStyle="bold"
				 	android:background="@drawable/button"
		    		android:layout_width="60dp"
		    		android:layout_height="match_parent"
		    		android:gravity="center"
		    		/>
		    </LinearLayout>
		    
		</LinearLayout>

	    <LinearLayout 
	    	android:orientation="horizontal"
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="3">
	    	<ToggleButton
	    		android:id="@+id/metronomeVibBtn"
	    		android:text="Vibration"
	    		android:textColor="#FFDDDDDD"
			    android:textSize="16sp"
			    android:textStyle="bold"
	    		android:layout_width="0dp"
	    		android:layout_height="match_parent"
	    		android:minHeight="50dp"
	    		android:gravity="center"
	    		android:layout_weight="1"
	    		android:layout_marginLeft="10dp"
	    		android:background="@drawable/button_on_off"/>
	   		<ToggleButton
	    		android:id="@+id/metronomeMuteBtn"
	    		android:text="Mute"
	    		android:textColor="#FFDDDDDD"
			    android:textSize="16sp"
			    android:textStyle="bold"
	    		android:layout_width="0dp"
	    		android:layout_height="match_parent"
	    		android:minHeight="50dp"
	    		android:gravity="center"
	    		android:layout_weight="1"
	    		android:layout_marginLeft="10dp"
	    		android:layout_marginRight="10dp"
	    		android:background="@drawable/button_on_off"/>
	    </LinearLayout>
	    
	    <ToggleButton
	    		android:id="@+id/metronomeStartStopBtn"
	    		android:text="START"
	    		android:textColor="#FFDDDDDD"
			    android:textSize="25sp"
			    android:textStyle="bold"
	    		android:layout_width="match_parent"
	    		android:layout_height="0dp"
	    		android:layout_weight="5"
	    		android:gravity="center"
	    		android:layout_marginLeft="10dp"
	    		android:layout_marginRight="10dp"
	    		android:layout_marginTop="5dp"
	    		android:background="@drawable/button_on_off"/>
	</LinearLayout>

    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_gravity="bottom"
    	android:background="@drawable/layout_bg2">
    	<TextView
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center"
			android:layout_marginTop="5dp"
    		android:text="Set the BPM"
    		android:textColor="#FFDDDDDD"
    		android:textSize="16sp"
    		android:textStyle="bold"/>
    	<LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_margin="10dp">
	   		<kankan.wheel.widget.WheelView 
			    android:id="@+id/metronome_bpmWheel"
			    android:layout_width="0dp"
			    android:layout_height="120dp"
			    android:minHeight="120dp"
			    android:layout_weight="1"
			    android:padding="10dp"
			    android:layout_gravity="center"/>
			 <Button 
			 	android:id="@+id/metronome_tapTempoBtn"
			 	android:layout_width="0dp"
			 	android:layout_height="120dp"
			 	android:layout_weight="1"
			 	android:padding="10dp"
			 	android:layout_gravity="center"
			 	android:textColor="#FFDDDDDD"
    			android:textSize="20sp"
    			android:textStyle="bold"
			 	android:background="@drawable/button"/>
		 </LinearLayout>
	</LinearLayout>	        
    
</LinearLayout>
