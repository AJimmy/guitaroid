<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    >
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:paddingTop="30dp"
	    android:paddingBottom="10dp"
	    android:layout_marginRight="8dp"
	    android:src="@drawable/title5"/>
	<LinearLayout
	    android:id="@+id/mainIconAreaMotherLinear"
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:orientation="vertical"
    	android:layout_weight="1"
    	android:padding="20dp">
	    	<LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1"
	    	android:orientation="horizontal"
	    	android:paddingLeft="10dp"
	    	android:paddingRight="10dp">
	    	   	<LinearLayout
	    	   	    android:id="@+id/mainIconLinear1"
			    	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:orientation="vertical"
			    	>
			    	<ImageView 
			    	    android:id="@+id/mainIconImage1"
			    	    android:src="@drawable/metronome_icon_default"
				    	android:layout_width="80dp"
			    		android:layout_height="80dp"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    	<TextView 
			    		android:id="@+id/mainIconText1"
				    	android:text="Metronome"
				    	android:textColor="#FFDDDDDD"
				    	android:textSize="15sp"
				    	android:paddingTop="3dp"
				    	android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    </LinearLayout>
			    <LinearLayout
			        android:id="@+id/mainIconLinear2"
			    	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:orientation="vertical"
			    	>
			    	<ImageView 
			    	    android:id="@+id/mainIconImage2"
			    	    android:src="@drawable/rhythmguide_icon_default"
				    	android:layout_width="80dp"
			    		android:layout_height="80dp"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    	<TextView 
			    		android:id="@+id/mainIconText2"
				    	android:text="Rhythm Guide"
				    	android:textColor="#FFDDDDDD"
				    	android:textSize="15sp"
				    	android:paddingTop="3dp"
				    	android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    </LinearLayout>
	    	</LinearLayout>
	    	
	    	<LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1"
	    	android:orientation="horizontal"
	    	android:paddingLeft="10dp"
	    	android:paddingRight="10dp">
	    	   	<LinearLayout
	    	   	    android:id="@+id/mainIconLinear3"
			    	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:orientation="vertical"
			    	>
			    	<ImageView 
			    	    android:id="@+id/mainIconImage3"
			    	    android:src="@drawable/virtualguitar_icon_default"
				    	android:layout_width="80dp"
			    		android:layout_height="80dp"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    	<TextView 
			    		android:id="@+id/mainIconText3"
				    	android:text="Virtual Guitar"
				    	android:textColor="#FFDDDDDD"
				    	android:textSize="15sp"
				    	android:paddingTop="3dp"
				    	android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    </LinearLayout>
			    <LinearLayout
			        android:id="@+id/mainIconLinear4"
			    	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:orientation="vertical"
			    	>
			    	<ImageView 
			    	    android:id="@+id/mainIconImage4"
			    	    android:src="@drawable/songplay_icon_default"
				    	android:layout_width="80dp"
			    		android:layout_height="80dp"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    	<TextView 
			    		android:id="@+id/mainIconText4"
				    	android:text="Song Play"
				    	android:textColor="#FFDDDDDD"
				    	android:textSize="15sp"
				    	android:paddingTop="3dp"
				    	android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    </LinearLayout>
	    	</LinearLayout>
	    	
	    	<LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1"
	    	android:orientation="horizontal"
	    	android:paddingLeft="10dp"
	    	android:paddingRight="10dp">
	    	   	<LinearLayout
	    	   	    android:id="@+id/mainIconLinear5"
			    	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:orientation="vertical"
			    	>
			    	<ImageView 
			    	    android:id="@+id/mainIconImage5"
			    	    android:src="@drawable/ear_test_icon_default"
				    	android:layout_width="80dp"
			    		android:layout_height="80dp"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    	<TextView 
			    		android:id="@+id/mainIconText5"
				    	android:text="Ear Test"
				    	android:textColor="#FFDDDDDD"
				    	android:textSize="15sp"
				    	android:paddingTop="3dp"
				    	android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    </LinearLayout>
			    <LinearLayout
			        android:id="@+id/mainIconLinear6"
			    	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:orientation="vertical"
			    	>
			    	<ImageView 
			    	    android:id="@+id/mainIconImage6"
			    	    android:src="@drawable/chordbook_icon_default"
				    	android:layout_width="80dp"
			    		android:layout_height="80dp"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    	<TextView 
			    		android:id="@+id/mainIconText6"
				    	android:text="Chord Book"
				    	android:textColor="#FFDDDDDD"
				    	android:textSize="15sp"
				    	android:paddingTop="3dp"
				    	android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_gravity="center"
			    		android:gravity="center"/>
			    </LinearLayout>
	    	</LinearLayout>
    	</LinearLayout>
</LinearLayout>
	    	